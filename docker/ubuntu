FROM ubuntu:14.04

# Update the OS
RUN apt-get update

# Upgrade the OS
RUN apt-get -y upgrade

# Install useful tools
RUN apt-get install -y vim build-essential git wget curl
# firefox
RUN apt-get autoremove

# Add user for future work
RUN useradd -m main --shell /bin/bash && echo "main:main" | chpasswd && adduser main sudo

# select created user
USER main

# Install miniconda2
RUN wget https://github.com/StatisKit/install-binaries/raw/master/linux/user_install
RUN bash ./user_install
RUN rm user_install

WORKDIR /home/main
